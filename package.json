{
  "name": "yaras",
  "version": "0.2.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ravasthi/yaras"
  },
  "url": "https://github.com/ravasthi/yaras/issues",
  "engines": {
    "node": ">=8.1.2"
  },
  "dependencies": {
    "babel-plugin-rewire": "^1.1.0",
    "cross-env": "^5.0.5",
    "font-awesome": "^4.7.0",
    "localforage": "^1.5.0",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-document-title": "^2.0.3",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools-extension": "^2.13.2",
    "redux-persist": "^4.8.3",
    "redux-thunk": "^2.2.0",
    "reset-css": "^2.2.1",
    "susy": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.0.2",
    "chai": "^4.1.1",
    "chai-enzyme": "^0.8.0",
    "coveralls": "^2.13.1",
    "dirty-chai": "^2.0.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.2.0",
    "eslint-plugin-sort-imports-es6": "^0.0.3",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.5.0",
    "node-sass-chokidar": "^0.0.3",
    "nyc": "^11.1.0",
    "react-addons-test-utils": "^15.6.0",
    "react-scripts": "^1.0.11",
    "sinon": "^3.2.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.6.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "src/index.js",
      "src/registerServiceWorker.js",
      "src/lib/testCommon.js",
      "src/lib/book-snippets/*.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true
  },
  "scripts": {
    "build:css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch:css": "yarn run build:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "lint:scss": "stylelint --config=stylelint.config.js 'src/**/*.scss' --syntax scss",
    "lint:js": "eslint --config=.eslintrc.js .",
    "start:js": "cross-env NODE_PATH=./src react-scripts start",
    "start": "run-p watch:css start:js",
    "build": "yarn run build:css && cross-env NODE_PATH=./src react-scripts build",
    "test:js": "cross-env NODE_ENV=test NODE_PATH=./src nyc mocha --opts .mocharc 'src/**/*.test.js'",
    "test:js:watch": "cross-env NODE_ENV=test NODE_PATH=./src mocha --opts .mocharc --watch 'src/**/*.test.js'",
    "pretest": "yarn run lint:scss && yarn run build:css && yarn run lint:js",
    "test": "yarn run test:js",
    "posttest": "if [[ ! -z $COVERALLS_REPO_TOKEN ]]; then nyc report --reporter=text-lcov | coveralls; fi",
    "eject": "react-scripts eject"
  }
}
